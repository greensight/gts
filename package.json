{
    "name": "@greensight/gts",
    "license": "MIT",
    "version": "1.0.0-alpha.11",
    "description": "Generate design tokens from Figma",
    "type": "module",
    "private": false,
    "scripts": {
        "build": "rimraf dist && vite build",
        "init": "pnpm run build && node ./dist/bin/init.js",
        "generate": "pnpm run build && node ./dist/bin/generate.js",
        "prepublishOnly": "pnpm run build",
        "lint": "eslint . --ext .ts --fix",
        "repack": "rm -rf ./node_modules && pnpm store prune && pnpm i",
        "format": "prettier ./src --write --ignore-path .prettierignore",
        "publish:alpha": "node scripts/publish.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/greensight/gts"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "bugs": "https://github.com/greensight/gts/issues",
    "keywords": [
        "figma",
        "design-tokens",
        "tokens",
        "figma-api",
        "design-system",
        "css-variables",
        "typescript"
    ],
    "homepage": "https://github.com/greensight/gts",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE.md"
    ],
    "dependencies": {
        "lodash-es": "^4.17.23",
        "rimraf": "^6.0.1",
        "ts-import": "2.0.40"
    },
    "devDependencies": {
        "@figma/rest-api-spec": "^0.34.0",
        "@rollup/plugin-commonjs": "^28.0.3",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^18.19.130",
        "@types/rimraf": "^4.0.5",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-unicorn": "^47.0.0",
        "prettier": "^3.6.2",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "tslib": "^2.7.0",
        "typescript": "^5.6.2",
        "vite": "^6.4.1",
        "vite-plugin-dts": "^4.5.3",
        "vite-plugin-static-copy": "^2.3.1"
    }
}
